<nav class="navbar">
    <div class="navbar_row">
        <div class="navbar_left-block">
            <div class="logo" id="navbar_logo">
                <picture class=navbar-logo-picture>
                    <source media="(min-width: 1024px)" srcset="/static/logo.png" class="logo-image">
                    <img src="/static/icon.png" alt="" class="logo-image">
                </picture>
            </div>
            <div class="search-input-field">
                <input type="text" placeholder="Поиск" class="search" id="search-input">
                <img src="/static/loupe.svg" alt="" class="search__button" id="search__button">
            </div>
        </div>
        <div class="navbar_right-block" id="navbar_login_menu">
            {{#if user}}
                <div class="navbar-notification-block">
                    <div class="navbar-icon button secondary-button" id="navbar-notification-button">
                        <img src="/static/notification.svg" alt="" class="navbar-notification-button__icon">
                    </div>
                    <div class="navbar-notification-list navbar-popup-menu_closed" id="navbar-notification-list">
                        <span class="text-center description" id="notifications-none">Уведомлений нет</span>
                    </div>
                </div>
                <div class="navbar-icon button secondary-button" id="navbar__chat-button">
                    <img src="/static/chat.svg" alt="" class="navbar-chat-button__icon">
                </div>
                <div class="navbar-popup secondary-button" id="navbar-popup-button">
                    <img src="/static/arrow_popup.svg" alt="" class="navbar-popup__icon navbar-popup__icon_closed" id="navbar-popup__icon">
                    <div class="navbar-popup-button__avatar" id="navbar-popup-button__avatar">

                    </div>
                </div>
                <div class="navbar-popup-menu navbar-popup-menu_closed" id="navbar-popup-menu">
                    <div class="navbar-popup-menu__profile popup-menu__item secondary-button" id="navbar-popup-menu__profile">
                        <img src="/static/profile.svg" alt="" class="navbar-icon phone_visibility">
                        <span class="description phone_visibility-false">Профиль</span>
                    </div>
                    <div class="navbar-popup-menu__feed popup-menu__item secondary-button phone_visibility-false" id="navbar-popup-menu__feed">
                        <span class="description">Лента</span>
                    </div>
                    <div class="navbar-popup-menu__exit popup-menu__item popup-menu__danger-item secondary-button" id="navbar-popup-menu__exit">
                        <img src="/static/exit.svg" alt="" class="navbar-icon phone_visibility">
                        <span class="description  popup-menu__danger-text phone_visibility-false">Выход</span>
                    </div>
                </div>
            {{else}}
                <button class="primary-button button button_medium" id="navbar_login_button">Войти</button>
                <button class="secondary-button button button_medium" id="navbar_signup_button">Регистрация</button>
            {{/if}}
        </div>
    </div>
</nav>
