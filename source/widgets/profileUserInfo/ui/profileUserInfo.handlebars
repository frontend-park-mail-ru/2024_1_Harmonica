<div class="profile-user-info__avatar" id="avatar">

</div>
<div class="profile-text">
    <div class="profile-text__nickname">
        {{userInfo.user.nickname}}
    </div>
    <div class="profile-counts">
        <div class="profile-text__followers" id="profile-followers">
            <span class="profile-followers-count" id="profile-followers-count">{{userInfo.subscribers_count}}</span> подписчиков
        </div>
        <div class="profile-counts-split">
            •
        </div>
        <div class="profile-text__subscriptions" id="profile-subscriptions">
            <span class="profile-followers-count" id="profile-followers-count">{{userInfo.subscriptions_count}}</span> подписки
        </div>
    </div>
    {{#if userInfo.is_owner}}
        <div class="secondary-button button profile-text-button_margin-top" id="profile-edit">
            Изменить профиль
        </div>
    {{else}}
        <div class="profile-text-button_margin-top" id="profile-sub-toggle-button">

        </div>
    {{/if}}
</div>
