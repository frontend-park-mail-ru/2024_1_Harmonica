<div class="board">
    <div class="board-desc">
        <div class="title">
            {{board.title}}
        </div>
        <div class="description">
            {{board.description}}
        </div>
        <div class="board-control-block">
            {{#if is_owner}}
                <div class="button button-small button-passive">
                    Изменить
                </div>
                <div class="button button-small button-passive">
                    Удалить
                </div>
            {{else}}
                <div class="button button-small button-active">
                    Подписаться
                </div>
            {{/if}}
        </div>
    </div>
    <div class="board-pins">

    </div>
</div>
