<header class="navbar">
    <div class="navbar_row">
        <div class="navbar_left-block">
            <div class="logo" id="navbar_logo">
                <span class="">Pinterest</span>
            </div>
            <input type="text" placeholder="Search" class="search">
        </div>
        <div class="navbar_right-block" id="navbar_login_menu">
            {{#if user}}
                <button class="primary-btn btn" id="navbar_logout_button">Выход</button>
            {{else}}
                <button class="primary-btn btn" id="navbar_login_button">Войти</button>
                <button class="secondary-btn btn" id="navbar_signup_button">Регистрация</button>
            {{/if}}
        </div>
    </div>
</header>