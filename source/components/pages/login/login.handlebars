<main>
    <div class="window">
        <h3 class="window_title">Добро пожаловать в Pinterest!</h3>
        <form action="" class="window_login-fields">
            <div class="window_input-fields">
                <input type="email" class="text-input" placeholder="Email" id="login_email">
                <div class="input_error" id="login_email_error"></div>
                <input type="password" class="text-input" placeholder="Пароль" id="login_password">
                <div class="input_error" id="login_password_error"></div>
            </div>
            <div class="button-field">
                <button type="submit" class="primary-btn btn" id="login_enter_button">Войти</button>
                <button class="secondary-btn btn" id="login_signup_button">Регистрация</button>
            </div>
        </form>
    </div>
</main>